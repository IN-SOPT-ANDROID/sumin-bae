<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/iv_follower"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_follower"
        app:layout_constraintStart_toStartOf="@+id/iv_follower"
        app:layout_constraintTop_toBottomOf="@+id/iv_follower"
        tools:text="@string/dummy_name" />

    <TextView
        android:id="@+id/tv_follower_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_follower_name"
        app:layout_constraintStart_toStartOf="@+id/tv_follower_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_follower_name"
        tools:text="@string/dummy_email" />

</androidx.constraintlayout.widget.ConstraintLayout>