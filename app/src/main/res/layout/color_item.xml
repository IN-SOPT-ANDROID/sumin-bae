<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_blue"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:src="@color/blue"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_blue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="@string/blue_name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_blue_hex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_blue" />

    <TextView
        android:id="@+id/tv_blue_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blue_hex"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_blue"
        app:layout_constraintEnd_toEndOf="@+id/tv_blue_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_blue_name" />

</androidx.constraintlayout.widget.ConstraintLayout>